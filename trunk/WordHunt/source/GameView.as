package  {		import flash.events.*	import flash.display.MovieClip;	import flash.text.TextField;		public class GameView extends MovieClip {				// Constants:		// Public Properties:		// Private Properties:		// UI Elements:		public var time_txt:TextField;		public var title_txt:TextField;		private var gameView:WordHunt;				// Initialization:		public function GameView() {			gameView = new WordHunt()			gameView.y =70;			gameView.x = 15;			gameView.addEventListener('ready',update)			addChild(gameView)			configUI();		}		// Public Methods:		// Protected Methods:		// Private Methods:		protected function configUI():void { }		private function update(e:Event):void{			title_txt.text = gameView.gameTitle;		}	}	}