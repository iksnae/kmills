package  {		import caurina.transitions.Tweener;	import flash.display.*;	import flash.events.*			public class MainMenuView extends Sprite {				// Constants:		// Public Properties:		// Private Properties:		// UI Elements:		public var continue_btn:MovieClip;		public var new_btn:MovieClip;		public var now_btn:MovieClip;		public var options_btn:MovieClip;		public var selector_view:MovieClip;		public var main_menu:MovieClip;		public var continue_menu:MovieClip;		public var canel_continue_btn:MovieClip;		public var ok_continue_btn:MovieClip;				private var buttons:Array;// = [continue_btn,new_btn,now_btn,options_btn]				// Initialization:		public function MainMenuView() {						continue_btn = main_menu.continue_btn;			new_btn = main_menu.new_btn;			now_btn = main_menu.now_btn;			options_btn = main_menu.options_btn;			selector_view = main_menu.selector_view;						canel_continue_btn = continue_menu.cancel_btn;			ok_continue_btn = continue_menu.okay_btn;						continue_menu.visible=false;						buttons =  [continue_btn,new_btn,now_btn,options_btn,canel_continue_btn];			for(var i:int=0;i< buttons.length;i++){				var btn:MovieClip = buttons[i];				btn.buttonMode=true;				btn.addEventListener(MouseEvent.CLICK, changeSelection);			}								}		// Public Methods:		// Protected Methods:		// Private Methods:		protected function configUI():void { 					}				private function changeSelection(e:MouseEvent):void{			var mc:MovieClip = e.currentTarget as MovieClip;			for(var i:int=0;i< buttons.length;i++){				if(mc == buttons[i]){					buttons[i].gotoAndStop('selected')					//Tweener.addTween(selector_view,{time:.2,y:buttons[i].y-28, alpha:1})					if(mc == continue_btn){						continue_menu.visible=true;						main_menu.visible=false;					}					if(mc == canel_continue_btn){						continue_menu.visible=false;						main_menu.visible=true;					}if(mc == new_btn){						dispatchEvent(new Event('new_game'))					}				}else{					buttons[i].gotoAndStop('normal')				}			}		}			}	}