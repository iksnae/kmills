package {	import com.wordhunt.model.GameConfig;	import com.wordhunt.view.BoardView;		import flash.display.Sprite;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;	import flash.net.URLLoader;	import flash.net.URLRequest;	public class WordHunt extends Sprite	{		private var _board:BoardView;		private var _levelLoader:URLLoader;		private var _words:String		private var _gridSize:int;		private var _currentLevel:int;				public var gameTitle:String;		public var gameTime:String;		public function WordHunt()		{			try{			     stage.scaleMode = StageScaleMode.NO_SCALE;			     stage.align		= StageAlign.TOP_LEFT			}catch(err){}			_levelLoader =  new URLLoader();			_levelLoader.addEventListener(Event.COMPLETE,levelLoaded)					_levelLoader.load(new URLRequest('http://iksnae.com/games/wordhunt/wordlist.xml'))																	}				private function levelLoaded(e:Event):void{									var xml:XML = XML(_levelLoader.data);						_currentLevel = Math.round(Math.random()*xml..round.length()-1)						_words = xml..words[_currentLevel];			_gridSize = xml..size[_currentLevel];			gameTitle = xml..name[_currentLevel]			trace('LEVEL LOADED: '+xml)			trace('GRID: '+_gridSize)			trace('WORDS: '+_words)			_board=new BoardView(testConfig())			_board.addEventListener('ready', onReady)            _board.build()            addChild(_board)					}		private function onReady(e:Object):void{			dispatchEvent(new Event('ready'))		}		private function testConfig():GameConfig{			var obj:GameConfig=new GameConfig()			obj.difficulty  = 0;			obj.tileSize    = 30;			obj.gridHeight  = obj.gridWidth	= _gridSize;			obj.hilightColor= 0xffcc00;			obj.lineStrokeColor = 0xfe00000;			obj.lineFillColor = 0xff0000;			obj.lineFillAlpha =1;			obj.lineStrokeAlpha=0;			obj.gameBackgroundColor = 0xffffff						obj.words = ['test', 'search', 'word', 'game', 'zooobooks']            obj.rawWords =_words//"look,seek,forage,fish,ferret,root,rummage,cast,Mercury,Venus,Earth,Mars,Jupiter,Saturn,Uranus,Neptune,Pluto,my,very,educated,mother,just,showed,us,nine,planets"			return obj;		}	}}